#!/bin/bash

set -e

cd $(dirname "${BASH_SOURCE[0]}")/..

mkdir -p out

os_list=(linux)
out_list=(linux)
version=${1:-$(<VERSION)}

for ((i=0; i < ${#os_list[@]}; i++)); do
  echo "Building plugin for ${os_list[i]}..."
  GOOS=${os_list[i]} GOARCH=amd64 go build -ldflags "-X main.Version=$version" -o "out/cflocal-$version-${out_list[i]}" .
done
